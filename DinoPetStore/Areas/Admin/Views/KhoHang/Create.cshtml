@model DinoPetStore.EF.PHIEUNHAPKHO

@{
    ViewBag.Title = "Thêm sản phẩm vào kho";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm sản phẩm vào kho</h2>

@using (Html.BeginForm("Create", "KhoHang", FormMethod.Post, new { @enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal" style="margin-left: 10px">
    <h4>Tạo Mới Phiếu Nhập Kho</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label><strong>Ngày nhập:</strong></label>
        @Html.ValidationMessageFor(model => model.NGAYNK, "", new { @class = "text-danger" })
        <div  >
            <input required="required" class="form-control text-box single-line" data-val="true" data-val-date="The field NGAYNK must be a date." data-val-required="The NGAYNK field is required." id="NGAYNK" name="NGAYNK" type="date" value="@DateTime.Now">
        </div>
    </div>

    <div class="form-group">
        <label><strong>Tên sản phẩm:</strong></label>
        <div  >
            @Html.DropDownList("MASP")
        </div>
    </div>

    <div class="form-group">
        <label><strong>Số lượng:</strong></label>
        @Html.ValidationMessageFor(model => model.SOLUONG, "", new { @class = "text-danger" })
        <div  >
            @Html.EditorFor(model => model.SOLUONG, new { htmlAttributes = new { @class = "form-control" }, @Required = "required" })

        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Tạo Mới" class="btn btn-success" /> |
            <a href="@Url.Action("Index", "KhoHang")" class="btn btn-danger btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-exclamation-triangle"></i>
                </span>
                <span class="text">Huỷ</span>
            </a>

        </div>
    </div>
</div>
}
