@model DinoPetStore.EF.ADMIN

@{
    ViewBag.Title = "Xoá Admin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h3 style="color: red;">Bạn chắc chắn muốn xoá Admin này ?</h3>
<div>
    <hr />
    <div>

        <dl class="dl-horizontal">
            <dt>
                Họ Tên:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.HOTEN)
            </dd>

            <dt>
                Địa Chỉ:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DIACHI)
            </dd>

            <dt>
                Số Điện Thoại:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DIENTHOAI)
            </dd>

            <dt>
                Loại:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TENLOAI)
            </dd>

            <dt>
                Tên Đăng Nhập:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TENDN)
            </dd>

            <dt>
                Mật Khẩu:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MATKHAU)
            </dd>

            <dt>
                Email:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EMAIL)
            </dd>
            <dt>
                Hình ảnh:
            </dt>

            <dd>
                <img src="~/img/@Model.AVATAR" height="100" width="100" />
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-success btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-check">

                            </i>
                        </span>
                        <span class="text">Xoá</span>
                    </button> |

                    <a href="@Url.Action("listadmin", "Admin")" class="btn btn-danger btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-exclamation-triangle"></i>
                        </span>
                        <span class="text">Huỷ</span>
                    </a>
                </div>
            </div>
        }
    </div>
</div>
