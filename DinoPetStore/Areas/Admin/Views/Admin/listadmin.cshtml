@model IEnumerable<DinoPetStore.EF.ADMIN>

@{
    ViewBag.Title = "Trang Quản Lý Admin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Trang Quản Lý Admin</h2>

<div>
    <h4 style="width: 100%; padding-top:20px;">
        <u>
            <a href="@Url.Action("Create", "Admin")" class="btn btn-success btn-icon-split">
                <span class="icon text-white-50">
                    <img src="~/img/icons/add.png" />
                </span>
                <span class="text">THÊM MỚI ADMIN</span>
            </a>
        </u>
    </h4>
    <hr />
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary text-center">Quản Lí Admin</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row"><div class="col-sm-12 col-md-6"><div class="dataTables_length" id="dataTable_length"><label>Show <select name="dataTable_length" aria-controls="dataTable" class="custom-select custom-select-sm form-control form-control-sm"><option value="10">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select></label></div></div><div class="col-sm-12 col-md-6"><div id="dataTable_filter" class="dataTables_filter"></div></div></div><div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                <thead>
                                    <tr role="row"><th class="sorting sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="HOTEN: activate to sort column descending" style="width: 155.281px;">Họ Tên</th><th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="diachi: activate to sort column ascending" style="width: 264.344px;">Địa Chỉ</th><th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="SODT: activate to sort column ascending" style="width: 111.406px;">Số ĐT</th><th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="LOAITAIKHOAN: activate to sort column ascending" style="width: 50.3125px;">Loại Tài Khoản</th><th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="TENDN: activate to sort column ascending" style="width: 107.234px;">Tên Đăng Nhập</th><th  tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 86.4219px;">AVATAR</th><th tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 86.4219px;">Email</th></tr>
                                </thead>
                                <tfoot>
                                    <tr><th rowspan="1" colspan="1">Họ Tên</th><th rowspan="1" colspan="1">Địa Chỉ</th><th rowspan="1" colspan="1">Số ĐT</th><th rowspan="1" colspan="1">Loại Tài Khoản</th><th rowspan="1" colspan="1">Tên Đăng Nhập</th><th rowspan="1" colspan="1">Avatar</th><th rowspan="1" colspan="1">Email</th></tr>
                                </tfoot>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HOTEN)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DIACHI)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DIENTHOAI)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TENLOAI)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TENDN)
                                            </td>
                                            <td>
                                                <img src="@Url.Content("~/img/" + item.AVATAR)" height="100" width="100" />
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EMAIL)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Sửa", "Edit", new { id = item.MAADMIN }) |
                                                @Html.ActionLink("Xóa", "Delete", new { id = item.MAADMIN })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
