@model DinoPetStore.Areas.Admin.Models.DangNhapModel
@{
    <title>Đăng Nhập</title>
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">


    <!-- Custom fonts for this template-->
    <link href="~/Asses/Admin//vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Asses/Admin/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Đăng Nhập</h1>
                                    </div>
                                    @using (Html.BeginForm("dangnhap", "Admin", FormMethod.Post))
                                    { 
                                        @Html.AntiForgeryToken()
                                        <div class="form-group">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <strong>@Html.LabelFor(model => model.tendn, htmlAttributes: new { @class = "control-label col-md-6" })</strong>
                                            @Html.ValidationMessageFor(model => model.tendn, "", new { @class = "text-danger" })
                                            <input class="form-control text-box single-line input-full" data-val="true" data-val-requied=" Tên đăng nhập không được để trống !" id="tendn" name="tendn" type="text" value="" />
                                        </div>
                                        <div class="form-group">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <strong>@Html.LabelFor(model => model.matkhau, htmlAttributes: new { @class = "control-label col-md-6" })</strong>
                                            @Html.ValidationMessageFor(model => model.matkhau, "", new { @class = "text-danger" })
                                            <input class="form-control text-box single-line input-full" data-val="true"data-val-length="Độ dài mật khẩu ít nhất 6 ký tự. " data-val-length-max="200" data-val-length-min="6" data-val-required="Mật khẩu không được để trống. " id="matkhau" name="matkhau" type="password" value="" />

                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">
                                                    Remember
                                                    Me
                                                </label>
                                            </div>
                                        </div>
                                        <div class="form-element form-submit"> 
                                            <button class="login btn btn-primary btn-user btn-block" type="submit" name="dangnhap">Đăng Nhập</button>
                                        </div>
                                     }
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="forgot-password.html">Forgot Password?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="register.html">Create an Account!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Asses/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Asses/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Asses/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Asses/Admin/js/sb-admin-2.min.js"></script>

</body>

</html>