@model DinoPetStore.EF.KICHTHUOC

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>TRANG THÊM KÍCH THƯỚC SẢN PHẨM</h2>

@using (Html.BeginForm("Create", "KichThuoc", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label><strong>Tên sản phẩm:</strong></label>
        <div class="col-md-10">
            @Html.DropDownList("MASP")
        </div>
    </div>
    <div class="form-group">
        <label><strong>Size sản phẩm:</strong></label>
        @Html.ValidationMessageFor(model => model.TENKICHTHUOC, "", new { @class = "text-danger" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.TENKICHTHUOC, new { htmlAttributes = new { @class = "form-control" }, @Required = "required" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Tạo Mới" class="btn btn-success" /> |
            <a href="@Url.Action("Index", "KichThuoc")" class="btn btn-danger btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-exclamation-triangle"></i>
                </span>
                <span class="text">Huỷ</span>
            </a>
        </div>
    </div>
</div>
}
