@using PagedList.Mvc
@using PagedList
@model PagedList.PagedList<DinoPetStore.EF.MAUSAC>

@{
    ViewBag.Title = "Trang Quản Lý Màu Sắc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h2>TRANG QUẢN LÝ MÀU SẮC CỦA SẢN PHẨM</h2>

<h4 style="width: 100%; padding-top:20px;">
    <u>
        <a href="@Url.Action("Create", "MauSac")" class="btn btn-success btn-icon-split">
            <span class="icon text-white-50">
                <img  src="~/img/icons/add.png" />
            </span>
            <span class="text">THÊM MỚI MÀU SẮC</span>
        </a>
    </u>
</h4>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary text-center">DANH SÁCH THƯƠNG HIỆU</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="col-sm-12 col-md-6"></div><div class="col-sm-12 col-md-6"><div id="dataTable_filter" class="dataTables_filter"></div></div><div class="row">
                    <div class="col-sm-12">
                        <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                            <thead>
                                <tr role="row">
                                    <th class="sorting sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="MATH: activate to sort column descending" style="width: 155.281px;">
                                        Mã Màu Sắc
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="TENTH: activate to sort column ascending" style="width: 140px;">
                                        Tên Màu Sắc
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MAMAUSAC)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TENMAUSAC)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "MauSac", new { id = item.MAMAUSAC })">
                                                <img src="~/img/icons/icon_Sua.png" />
                                            </a>|
                                            <a href="@Url.Action("Edit", "MauSac", new { id = item.MAMAUSAC })">
                                                <img src="~/img/info_25px.png" />
                                            </a>|
                                            <a href="@Url.Action("Delete", "MauSac", new { id = item.MAMAUSAC })">
                                                <img src="~/img/icons/icon_Xoa.png" />
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div align="center">@Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))</div>
<link href="~/Content/phantrang.css" rel="stylesheet" />

