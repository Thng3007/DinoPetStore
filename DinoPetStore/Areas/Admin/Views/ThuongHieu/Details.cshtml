@model DinoPetStore.EF.THUONGHIEU

@{
    ViewBag.Title = "Trang chi tiết thương hiệu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h1>TRANG CHI TIẾT THƯƠNG HIỆU CỦA 1 SẢN PHẨM</h1>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Thương Hiệu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TENTH)
        </dd>

        <dt>
            Logo Thương Hiệu:
        </dt>

        <dd>
            <img src="@Url.Content("~/img/"+@Model.LOGO)" />
        </dd>

    </dl>
</div>

<div class="col-md-offset-2 col-md-10">
    <a href="@Url.Action("Edit", "ThuongHieu", new { id = Model.MATH })" class="btn btn-success">Sửa</a> |
    <a href="@Url.Action("Index", "ThuongHieu")" class="btn btn-primary">Quay Lại Trang Quản Lý</a>
</div>