@using PagedList
@using PagedList.Mvc
@model PagedList.PagedList<DinoPetStore.EF.KHACHHANG>

@{
    ViewBag.Title = "Danh Sách Khách Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<<h2 style="padding-top:10px">DANH SÁCH KHÁCH HÀNG</h2>
<h4 style="width: 100%; padding-top:20px;">
    <u>
        <a href="@Url.Action("Create", "KhachHang")" class="btn btn-success btn-icon-split">
            <span class="icon text-white-50">
                <img style="margin-left:25px" src="~/img/icons/add.png" />
            </span>
            <span class="text">THÊM MỚI KHÁCH HÀNG</span>
        </a>
    </u>
</h4>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary text-center">DANH SÁCH KHÁCH HÀNG</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="row"><div class="col-sm-12 col-md-6"><div class="dataTables_length" id="dataTable_length"><label>Show <select name="dataTable_length" aria-controls="dataTable" class="custom-select custom-select-sm form-control form-control-sm"><option value="10">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select></label></div></div><div class="col-sm-12 col-md-6"><div id="dataTable_filter" class="dataTables_filter"></div></div></div><div class="row">
                    <div class="col-sm-12">
                        <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                            <thead>
                                <tr role="row">
                                    <th class="sorting sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="MACHUCNANG: activate to sort column descending" style="width: 155.281px;">Họ Tên Khách</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="DIENTHOAI: activate to sort column ascending" style="width: 140px;">Số Điện Thoại</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 260.344px;">Địa Chỉ</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 140px;">Tên Đăng Nhập</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 260.344px;">Email</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 160px;">Ngày Sinh</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 260.344px;">Avatar</th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.HOTENKH)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DIENTHOAI)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DIACHI)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TENDNKH)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EMAIL)
                                        </td>
                                        <td>
                                            @string.Format("{0:dd/MM/yyyy}", item.NGAYSINH)
                                        </td>
                                        <td>
                                            @if (item.HINHANH == null)
                                            {
                                                <img src="~/img/account.png" height="100" width="100" />
                                            }
                                            else
                                            {
                                                <img src="@Url.Content("~/img/" + @item.HINHANH)" height="100" width="100" />
                                            }

                                        </td>
                                        <td>
                                            @Html.ActionLink("Sửa", "Edit", new { id = item.MAKH }) |
                                            @Html.ActionLink("Chi tiết", "Details", new { id = item.MAKH }) |
                                            @Html.ActionLink("Xóa", "Delete", new { id = item.MAKH })


                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    Trang @(@Model.PageNumber>Model.PageCount?Model.PageCount: Model.PageNumber)/@Model.PageCount
</div>
<div align="center">@Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))</div>
<link href="~/Content/phantrang.css" rel="stylesheet" />




