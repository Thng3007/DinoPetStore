@model DinoPetStore.EF.KHACHHANG

@{
    ViewBag.Title = "Thông Tin Khách Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h2> CHI TIẾT THÔNG TIN KHÁCH HÀNG</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Họ Tên :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HOTENKH)
        </dd>

        <dt>
            Số Điện Thoại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DIENTHOAI)
        </dd>

        <dt>
            Địa Chỉ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DIACHI)
        </dd>



        <dt>
            Email:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EMAIL)
        </dd>

        <dt>
            Ngày Sinh:
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", @Html.DisplayFor(model => model.NGAYSINH))
        </dd>

        <dt>
            Avatar:
        </dt>

        <dd>
            @if (Model.HINHANH == null)
            {
                <img src="~/img/account.png" height="100" width="100" />
            }
            else
            {
                <img src="~/img/@Model.HINHANH" height="100" width="100" />
            }

        </dd>

    </dl>
</div>

<div class="col-md-offset-2 col-md-10">
    <a href="@Url.Action("Edit", "KhachHang", new { id = Model.MAKH })" class="btn btn-success">Sửa</a> |
    <a href="@Url.Action("Index", "KhachHang")" class="btn btn-primary">Quay Lại Trang Quản Lý</a>
</div>
