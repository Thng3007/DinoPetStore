@model PagedList.PagedList<DinoPetStore.EF.LOAI>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Trang Quản Lý Loại Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h2>TRANG QUẢN LÝ LOẠI SẢN PHẨM</h2>
<h5 style="width:100%; padding-top:10px">
    <u>
        <a href="@Url.Action("Create", "Loai")" class="btn btn-success btn-icon-split">
            <span class="icon text-white-50">
                <img style="margin-left:25px" src="~/img/icons/add.png" />
            </span>
            <span class="text">THÊM MỚI Loại Sản Phẩm</span>
        </a>
    </u>
</h5>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary text-center">DANH SÁCH THƯƠNG HIỆU</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="col-sm-12 col-md-6"></div><div class="col-sm-12 col-md-6"><div id="dataTable_filter" class="dataTables_filter"></div></div><div class="row">
                    <div class="col-sm-12">
                        <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                            <thead>
                                <tr role="row">
                                    <th class="sorting sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="MALOAI: activate to sort column descending" style="width: 140px;">
                                        Mã Loại
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="TENLOAI: activate to sort column ascending" style="width: 260px;">
                                        Tên Loại Sản Phẩm
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MALOAI)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TENLOAI)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Sửa", "Edit", new { id = item.MALOAI }) |
                                            @Html.ActionLink("Chi tiết", "Details", new { id = item.MALOAI }) |
                                            @Html.ActionLink("Xóa", "Delete", new { id = item.MALOAI })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    Trang @(@Model.PageNumber>Model.PageCount?Model.PageCount: Model.PageNumber)/@Model.PageCount
</div>
<div align="center">@Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))</div>
<link href="~/Content/phantrang.css" rel="stylesheet" />