@model DinoPetStore.EF.HINH

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>TRANG CHỈNH SỬA</h2>

@using (Html.BeginForm("Edit", "Hinh", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin-left: 10px">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MAHINH)
        <br />
        <div class="form-group">
            <label><strong>Tên Sản Phẩm:</strong></label>
            <div  >
                @Html.DropDownList("MASP")
            </div>
        </div>
        <br />
        <div class="form-group">
            <label><strong>Hình Ảnh:</strong></label>
            <img src="@Url.Content("~/img/"+  Model.HINH1)" width="120" />
            <div  >
                <input type="file" name="fileUpload" Required="required" />
                @ViewBag.Thongbao
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập Nhật" class="btn btn-success" /> |
                <a href="@Url.Action("Index", "Hinh")" class="btn btn-danger btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-exclamation-triangle"></i>
                    </span>
                    <span class="text">Huỷ</span>
                </a>
            </div>
        </div>
    </div>
}
