@model DinoPetStore.EF.KHACHHANG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
            <li><a href="@Url.Action("Index", "User")"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Trang Chủ</a></li>
            <li class="active">Sửa Thông Tin Cá Nhân</li>
        </ol>
    </div>
</div>

<div id="PageContainer" class="is-moved-by-drawer" style="border-color:dimgray">
    <main class="main-content" role="main">
        <section id="page-wrapper">
            <div class="wrapper">
                <div class="inner">
                    <div class="grid">
                        <div class="grid__item large--one-third push--large--one-third text-center">
                            <h1 align="center">Sửa Thông Tin Cá Nhân</h1>
                            <div class="form-vertical">
                                @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal" align="justify" style="margin-left: 30px;">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.MAKH)

                                        <div class="form-group">
                                            <div class="col-md-5">
                                                <label>Họ tên:</label>
                                                @Html.EditorFor(model => model.HOTENKH, new { htmlAttributes = new { @class = "form-control input-full" }, @Required = "required" })
                                                @Html.ValidationMessageFor(model => model.HOTENKH, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group ">
                                            <div class="col-md-5" onkeypress="return isNumberKey(event)">
                                                <label>Số Điện Thoại:</label>
                                                @Html.EditorFor(model => model.DIENTHOAI, new { htmlAttributes = new { @class = "form-control input-full" }, @Required = "required" })
                                                @Html.ValidationMessageFor(model => model.DIENTHOAI, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-5">
                                                <label>Địa Chỉ:</label>
                                                @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "form-control input-full" }, @Required = "required" })
                                                @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-5">
                                                <label>Tên đăng nhập:</label>
                                                @Html.EditorFor(model => model.TENDNKH, new { htmlAttributes = new { @class = "form-control input-full" }, @Required = "required" })
                                                @Html.ValidationMessageFor(model => model.TENDNKH, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-5">
                                                <label>Email:</label>
                                                @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control input-full" }, @Required = "required" })
                                                @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-5">
                                                <label>Ngày sinh:</label>
                                                @Html.EditorFor(model => model.NGAYSINH, new { htmlAttributes = new { @class = "form-control input-full", @Required = "required" } })
                                                @Html.ValidationMessageFor(model => model.NGAYSINH, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <br />
                                        <div class="form-group">
                                            <div class="col-md-6 ">
                                                <label>Hình ảnh:</label>
                                                <img src="@Url.Content("~/img/" + @Model.HINHANH)" alt="" height="120" width="120" />
                                                <input class="form-control text-box single-line input-full " id="fileUpload" required="required" name="fileUpload" type="file" value="">

                                            </div>
                                        </div>


                                        <br />
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-6">
                                                <input type="submit" value="Cập nhật" class="btn btn--full" />
                                                @Html.ActionLink("Quay lại trang thông tin", "Index")
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                        </div>

                    </div>

                </div>
            </div>
        </section>

    </main>
</div>
}
