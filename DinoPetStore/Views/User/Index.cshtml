@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section slide {
    <div class="top-brands">

        <!-- main-slider -->
        <ul id="demo1">
            <li>
                <img src="~/img/slider-image/pet3.png" alt="" />
                <!--Slider Description example-->
                <div class="slide-desc">
                </div>
            </li>
            <li>
                <img src="~/img/slider-image/pet.jpg" alt="" />
                <div class="slide-desc">
                </div>
            </li>

            <li>
                <img src="~/img/slider-image/1.png" alt="" />
                <div class="slide-desc">
                    <h3>Giao Hàng Toàn Quốc</h3>
                </div>
            </li>
        </ul>

        <br />

        <!-- //main-slider -->
        <div class="container">
            <h2>Sản Phẩm Chất Lượng</h2>
            <div class="grid_3 grid_5">
                <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
                    <ul id="myTab" class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#expeditions" id="expeditions-tab" role="tab" data-toggle="tab" aria-controls="expeditions" aria-expanded="true">SẢN PHẨM CHẤT LƯỢNG</a></li>
                        <li role="presentation"><a href="#tours" role="tab" id="tours-tab" data-toggle="tab" aria-controls="tours">SẢN PHẨM MỚI</a></li>
                    </ul>
                    <div id="myTabContent" class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="expeditions" aria-labelledby="expeditions-tab">
                            <div class="agile-tp">
                                <p class="w3l-ad">Sản phẩm được Dino Store đánh giá là chất lượng, đảm bảo sức khỏe cho thú cưng của bạn .</p>
                            </div>
                            @foreach (var i in Model)
                            {
                                <div class="agile_top_brands_grids">

                                    <div class="col-md-4 top_brand_left" style="padding-bottom: 15px">
                                        <div class="hover14 column">
                                            <div class="agile_top_brand_left_grid" style="height: 602.44px">
                                                <div class="agile_top_brand_left_grid1">
                                                    <figure>
                                                        <div class="snipcart-item block">
                                                            <div class="snipcart-thumb">
                                                                <a href="@Url.Action("Chitiet", "User" , new { id = i.MASP })">
                                                                    <img title=" " alt="Index Img Top Items" src="@Url.Content("~/img/" + @i.HINHANH)" style="height: 350px; width: 250px;" />
                                                                </a>
                                                                <p>@i.TENSP</p>
                                                                <div class="stars">
                                                                    <i class="fa fa-star blue-star" aria-hidden="true"></i>
                                                                    <i class="fa fa-star blue-star" aria-hidden="true"></i>
                                                                    <i class="fa fa-star blue-star" aria-hidden="true"></i>
                                                                    <i class="fa fa-star blue-star" aria-hidden="true"></i>
                                                                    <i class="fa fa-star gray-star" aria-hidden="true"></i>
                                                                </div>
                                                                <h4>@String.Format("{0:0,0}", @i.DONGIABAN)</h4>
                                                            </div>
                                                            <div class="snipcart-details top_brand_home_details">
                                                                <form action="#" method="post">
                                                                    <fieldset>
                                                                        <input type="hidden" name="cmd" value="_cart" />
                                                                        <input type="hidden" name="add" value="1" />
                                                                        <input type="hidden" name="business" value=" " />
                                                                        <input type="hidden" name="item_name" value="@i.TENSP" />
                                                                        <input type="hidden" name="amount" value="@i.DONGIABAN" />
                                                                        <input type="hidden" name="discount_amount" value="@i.GIAMGIA" />
                                                                        <input type="hidden" name="currency_code" value="VND" />
                                                                        <input type="hidden" name="return" value=" " />
                                                                        <input type="hidden" name="cancel_return" value=" " />
                                                                        <input type="submit" name="submit" value="THÊM VÀO GIỎ" onclick="window.location.href ='@Url.Action("ThemGiohang", "GioHang", new { @iMASP = i.MASP, @strURL = Request.Url.ToString() })'" class="button" />
                                                                    </fieldset>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </figure>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                            }

                            <div class="clearfix"> </div>
                        </div> <!--/end san pham noi bat-->
                        <!--sp moi-->
                        <div role="tabpanel" class="tab-pane fade" id="tours" aria-labelledby="tours-tab">
                            <div class="agile-tp">
                                <p class="w3l-ad">Sản phẩm mới nhà Dino.</p>
                            </div>
                            @foreach (var i in Model)
                            {
                                <div class="agile_top_brands_grids">

                                    <div class="col-md-4 top_brand_left">
                                        <div class="hover14 column" style="padding-block: 5px">
                                            <div class="agile_top_brand_left_grid">
                                                <div class="agile_top_brand_left_grid1">
                                                    <figure>
                                                        <div class="snipcart-item block">
                                                            <div class="snipcart-thumb">
                                                                <a href="@Url.Action("Chitiet", "User" , new { id = i.MASP })">
                                                                    <img title=" " alt="Index Img New Items" src="@Url.Content("~/img/" + @i.HINHANH)" style="height: 350px; width: 250px;" />
                                                                </a>
                                                                <p>@i.TENSP</p>
                                                                <div class="stars">
                                                                    <i class="fa fa-star blue-star" aria-hidden="true"></i>
                                                                    <i class="fa fa-star blue-star" aria-hidden="true"></i>
                                                                    <i class="fa fa-star blue-star" aria-hidden="true"></i>
                                                                    <i class="fa fa-star blue-star" aria-hidden="true"></i>
                                                                    <i class="fa fa-star gray-star" aria-hidden="true"></i>
                                                                </div>
                                                                <h4>@String.Format("{0:0,0}", @i.DONGIABAN)</h4>
                                                            </div>
                                                            <div class="snipcart-details top_brand_home_details">
                                                                <form action="#" method="post">
                                                                    <fieldset>
                                                                        <input type="hidden" name="cmd" value="_cart" />
                                                                        <input type="hidden" name="add" value="1" />
                                                                        <input type="hidden" name="business" value=" " />
                                                                        <input type="hidden" name="item_name" value="@i.TENSP" />
                                                                        <input type="hidden" name="amount" value="@String.Format("{0:0,0}", @i.DONGIABAN)" />
                                                                        <input type="hidden" name="discount_amount" value="@i.GIAMGIA" />
                                                                        <input type="hidden" name="currency_code" value="VND" />
                                                                        <input type="hidden" name="return" value=" " />
                                                                        <input type="hidden" name="cancel_return" value=" " />
                                                                        @if (i.SOLUONG != 0)
                                                                        {
                                                                            <input type="submit" name="submit" value="THÊM VÀO GIỎ" onclick="window.location.href ='@Url.Action("ThemGiohang", "GioHang", new { @iMASP = i.MASP, @strURL = Request.Url.ToString() })'" class="button" />
                                                                        }
                                                                        @if (i.SOLUONG == 0)
                                                                        {
                                                                            <input type="submit" name="submit" value="TẠM HẾT HÀNG" onclick="window.location.href=" #" class="button" />
                                                                        }

                                                                    </fieldset>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </figure>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                            }

                            <div class="clearfix"> </div>
                        </div> <!--end sp moi-->

                    </div> <!--end tag content-->
                </div>
            </div> <!--end grid 3-5-->
        </div> <!--/end container-->
    </div> <!--/end Top Brand-->

}


